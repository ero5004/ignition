<h1>Create New Account</h1>
<script>
	function checkFields()
	{
		var email = $('#email').val();
		var password = $('#password').val();
		var password2 = $('#password2').val();
		var name = $('#name').val();
		var bio = $('#bio').val();
		
		//check for required fields
		if (!email)
		{
			alert("email required");
			return;
		}
		
		if (!password)
		{
			alert("password required");
			return;
		}
		
		if (!password2)
		{
			alert("password confirmation required");
			return;
		}
		
		if (!name)
		{
			alert("name required");
			return;
		}
		
		//check that passwords match
		
		if (password == password2)
		{
			$.post('/createUser', {
				email: email,
				password: password,
				name: name,
				bio: bio
			});
		}
		else
		{
			//change to modal popup later
			alert("passwords don't match");
		}
	}
</script>

<form id="signup" method="POST" action="/createUser">
	<label for="email">Email:</label>
	<input type="text" id="email"></input>
	<br/>
	<label for="password">Password:</label>
	<input type="password" id="password"></input>
	<br/>
	<label for="password2">Confirm Password:</label>
	<input type="password" id="password2"></input>
	<br/>
	<label for="name">Name:</label>
	<input type="text" id="name"></input>
	<br/>
	<label for="bio">Short Bio:</label>
	<textarea id="bio"></textarea>
	<br/>
	<input type="button" id="login" value="Sign Up!" onclick="checkFields()" ></input>
</form>